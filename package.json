{
  "name": "node-api-starter",
  "version": "1.0.0",
  "description": "Full-featured starter for Node Rest API server using ExpressJS",
  "author": "Martin Litvaj <kamahl19@gmail.com> (http://litvaj.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kamahl19/node-api-starter.git"
  },
  "bugs": {
    "url": "https://github.com/Kamahl19/node-api-starter/issues"
  },
  "engines": {
    "node": ">=14.14",
    "yarn": "1.x"
  },
  "main": "src/index.js",
  "scripts": {
    "format": "prettier --write . --ignore-unknown",
    "format-check": "prettier --check . --ignore-unknown",
    "lint": "eslint .",
    "seed": "node src/seeds/index.js",
    "start": "nodemon --watch .env --watch . --inspect src/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "eslint": "8.2.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "4.3.8",
    "lint-staged": "12.0.2",
    "nodemon": "2.0.15",
    "pino-pretty": "7.6.1",
    "prettier": "2.4.1"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "celebrate": "15.0.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "10.0.0",
    "es6-error": "4.1.1",
    "express": "4.17.1",
    "express-async-errors": "3.1.1",
    "express-healthcheck": "0.1.0",
    "helmet": "4.6.0",
    "http-status": "1.5.0",
    "jsonwebtoken": "8.5.1",
    "lodash.merge": "4.6.2",
    "mongoose": "6.0.12",
    "mongoose-seed": "0.6.0",
    "nodemailer": "6.7.1",
    "nodemailer-mailgun-transport": "2.1.3",
    "pino": "7.2.0",
    "pino-http": "6.0.0",
    "uuid": "8.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}

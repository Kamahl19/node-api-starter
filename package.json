{
  "name": "node-api-starter",
  "version": "1.0.3",
  "description": "Full-featured starter for Node Rest API server using ExpressJS",
  "author": "Martin Litvaj <kamahl19@gmail.com> (http://litvaj.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kamahl19/node-api-starter.git"
  },
  "bugs": {
    "url": "https://github.com/Kamahl19/node-api-starter/issues"
  },
  "engines": {
    "node": ">=12",
    "yarn": "1.x"
  },
  "main": "src/index.js",
  "scripts": {
    "format": "prettier --write '**/*.{js,json,md,yml,yaml}'",
    "format-check": "prettier --check '**/*.{js,json,md,yml,yaml}'",
    "lint": "node ./node_modules/eslint/bin/eslint.js '**/*.js'",
    "seed": "node src/seeds/index.js",
    "start": "nodemon --watch .env --watch . --inspect src/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint --fix"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "7.14.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "nodemon": "2.0.6",
    "pino-pretty": "4.3.0",
    "prettier": "2.2.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^13.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "es6-error": "^4.1.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-healthcheck": "^0.1.0",
    "helmet": "^4.1.0",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "mongoose": "^5.10.3",
    "mongoose-seed": "^0.6.0",
    "nodemailer": "^6.4.11",
    "nodemailer-mailgun-transport": "^2.0.0",
    "pino": "^6.6.0",
    "pino-http": "^5.2.0",
    "uuid": "^8.3.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}

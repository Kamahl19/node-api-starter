{
  "name": "node-api-starter",
  "version": "1.0.3",
  "description": "Full-featured starter for Node Rest API server using ExpressJS",
  "author": "Martin Litvaj <kamahl19@gmail.com> (http://litvaj.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kamahl19/node-api-starter.git"
  },
  "bugs": {
    "url": "https://github.com/Kamahl19/node-api-starter/issues"
  },
  "engines": {
    "node": ">=10.15.3",
    "yarn": ">=1.15.2"
  },
  "main": "src/index.js",
  "scripts": {
    "format": "prettier --write '**/*.{js,json,md}'",
    "lint": "node ./node_modules/eslint/bin/eslint.js '**/*.js'",
    "seed": "node src/seeds/index.js",
    "start": "nodemon --watch .env --watch . --inspect src/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint --fix",
      "git add"
    ],
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "6.3.0",
    "eslint-plugin-node": "9.2.0",
    "husky": "3.0.5",
    "lint-staged": "9.2.5",
    "nodemon": "1.19.2",
    "pino-pretty": "3.2.1",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "celebrate": "^10.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "es6-error": "^4.1.1",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-healthcheck": "^0.1.0",
    "express-pino-logger": "^4.0.0",
    "helmet": "^3.20.0",
    "http-status": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "mongoose": "^5.6.9",
    "mongoose-seed": "^0.6.0",
    "nodemailer": "^6.3.0",
    "nodemailer-mailgun-transport": "^1.4.0",
    "pino": "^5.13.2",
    "uuid": "^3.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "node/exports-style": [
        "error",
        "module.exports"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
